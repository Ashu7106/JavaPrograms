package JavaPackage;

public class WhileLoop {

	public static void main(String[] args) {
	 
		//******************while and for loop in java *****************************
		
		
		int i=0;
		while(i<=10) {
			
		System.out.println(i);
	
		i=i+1;
		
	}
		
	  int k;
	  
	for(k=10;k>=-10;k--) {
		
		
	System.out.println(k);	
		
		
	}
		
	}

}
